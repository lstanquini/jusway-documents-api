# .env - Configurações do Microserviço

# Servidor
PORT=3001
BASE_URL=http://localhost:3001

# CORS - URL do seu frontend Base44
FRONTEND_URL=http://localhost:3000

# Storage Provider
# Opções: 'local', 'base44', 's3'
STORAGE_PROVIDER=local

# Se usar Base44 para storage
UPLOAD_URL=https://seu-base44-app.com/api/upload
STORAGE_API_KEY=sua_api_key_base44

# Conversão PDF (opcional)
# Se tiver uma API externa para conversão
CONVERT_API_URL=
CONVERT_API_KEY=

# Futuro: DocuSign
DOCUSIGN_ACCOUNT_ID=
DOCUSIGN_TOKEN=
DOCUSIGN_BASE_URL=https://demo.docusign.net/restapi